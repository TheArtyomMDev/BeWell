<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout2"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">


	<view
		android:id="@+id/canvas"
		class="com.bewell.ui.CustomView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="7"
		tools:layout_conversion_absoluteHeight="202dp"
		tools:layout_conversion_absoluteWidth="411dp"
		tools:layout_editor_absoluteX="0dp"
		tools:layout_editor_absoluteY="0dp" />

	<TextView
		android:id="@+id/result_info_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:fontFamily="@font/montserrat_semi_bold"
		android:text="-- bpm"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:textColor="?attr/colorPrimary"
		android:textSize="30sp"
		tools:layout_conversion_absoluteHeight="40dp"
		tools:layout_conversion_absoluteWidth="104dp"
		tools:layout_editor_absoluteX="154dp"
		tools:layout_editor_absoluteY="202dp" />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5">

		<SurfaceView
			android:id="@+id/preview"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.329"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_conversion_absoluteHeight="475dp"
			tools:layout_conversion_absoluteWidth="411dp" />

		<view
			android:id="@+id/canvas2"
			class="com.bewell.ui.HeartRateMonitorActivity$CustomView2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_conversion_absoluteHeight="200dp"
			tools:layout_conversion_absoluteWidth="200dp" />

	</androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>